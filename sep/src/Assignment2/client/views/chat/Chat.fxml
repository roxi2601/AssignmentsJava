          <RowConstraints maxHeight="74.0" minHeight="10.0" prefHeight="14.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button mnemonicParsing="false" onAction="#onSendButton" text="Send" GridPane.columnIndex="1" />
            <TextArea fx:id="chatArea" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
