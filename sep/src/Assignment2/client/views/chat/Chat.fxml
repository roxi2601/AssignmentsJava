   <children>
      <GridPane layoutX="34.0" layoutY="6.0" prefHeight="386.0" prefWidth="507.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="472.0" minWidth="10.0" prefWidth="425.0" />
